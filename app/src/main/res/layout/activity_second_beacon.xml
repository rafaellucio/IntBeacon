<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/secondActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="br.com.intbeacon.intbeacon.SecondBeaconActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_add_alert_black_24dp"
        android:layout_marginBottom="15dp"
    />

    <TextView
        android:id="@+id/secondTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vire a direita e siga em frente por 10 segundos."
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:theme="@style/AppTheme"
        android:layout_marginBottom="50dp"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="30dp" />

    <ImageView
        android:id="@+id/secondImageView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:cropToPadding="false"
        android:background="@drawable/image_02"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="155dp"
    />

</LinearLayout>
